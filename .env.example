# Environment Configuration Template
# Copy to .env file and fill in your actual values

# Firebase Configuration
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Application Settings
APP_NAME=FedEx Clone
APP_VERSION=0.5.0
APP_ENVIRONMENT=development

# API Configuration
API_BASE_URL=http://localhost:8000
API_TIMEOUT=30000

# Feature Flags
ENABLE_GOOGLE_LOGIN=true
ENABLE_INTERNATIONAL_SHIPPING=true
ENABLE_PAYMENT_INTEGRATION=false
ENABLE_ADMIN_PANEL=false

# Email Configuration
SENDER_EMAIL=noreply@fedexclone.com
SUPPORT_EMAIL=support@fedexclone.com

# Payment Configuration (Phase 9)
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
PAYPAL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxx

# Logging
LOG_LEVEL=info
DEBUG_MODE=false

# Analytics
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
